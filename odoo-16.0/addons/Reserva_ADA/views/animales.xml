<odoo>
    <data>
        <!-- vista search -->
        <record model="ir.ui.view" id="grupo3c.animal_form">
            <field name="name">reserva ADA animales search</field>
            <field name="model">grupo3c.animales</field>
            <field name="arch" type="xml">
                <search>
                    <field name="especie"/>
                    <field name="alimentacion"/>
                </search>
            </field>
        </record>

        <!-- vista Arbol -->
        <record model="ir.ui.view" id="grupo3c.animal_list">
            <field name="name">reserva ADA animales tree</field>
            <field name="model">grupo3c.animales</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nombre"/>
                    <field name="genero"/>
                    <field name="edad"/>
                    <field name="peso"/>
                    <field name="altura"/>
                    <field name="especie"/>
                    <field name="alimentacion"/>
                    <field name="salud"/>
                </tree>
            </field>
        </record>

        <!-- vista Formulario -->
        <record model="ir.ui.view" id="grupo3c.animal_form">
            <field name="name">reserva ADA animales form</field>
            <field name="model">grupo3c.animales</field>
            <field name="arch" type="xml">
                <form string="animales form">
                    <group colspan="4">
                        <group col="8">
                            <separator string="GENERAL ANIMAL DATA" colspan="2"/>
                            <field name="nombre"/>
                            <field name="genero"/>
                            <field name="edad"/>
                            <field name="peso"/>
                            <field name="altura"/>
                            <field name="especie"/>
                            <field name="alimentacion"/>
                            <field name="salud"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!--  vista Kanban  -->
        <record id="animales-kanban-view" model="ir.ui.view">
            <field name="name">reserva ADA animales kanba</field>
            <field name="model">grupo3c.animales</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="nombre"/>
                    <field name="genero"/>
                    <field name="edad"/>
                    <field name="peso"/>
                    <field name="altura"/>
                    <field name="especie"/>
                    <field name="alimentacion"/>
                    <field name="salud"/>
                </kanban>
            </field>
        </record>


        <!-- menu item -->
        <record model="ir.actions.act_window" id="grupo3c.action_window2">
            <field name="name">RESERVA ADA ANIMAL</field>
            <field name="res_model">grupo3c.animales</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Animalmanagment"
                  id="grupo3c.menu_2_list"
                  parent="grupo3c.menu_1"
                  action="grupo3c.action_window2"/>

    </data>
</odoo>