<odoo>
    <data>
        <!--     explicit list view definition -->

        <record model="ir.ui.view" id="grupo3c.entradas_search">
            <field name="name">grupo3c entradas search</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <search>
                    <field name="precio"/>
                    <field name="fecha entrada"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="grupo3c.entradas_list">
            <field name="name">grupo3c entradas tree</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="precio"/>
                    <field name="fecha_entrada"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="grupo3c.entradas_form">
            <field name="name">grupo3c entradas form</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <form string="objective form">
                    <group colspan="4">
                        <group colspan="2" col="2">
                            <separator string="Valores de entrada" colspan="2"/>
                            <field name="precio"/>
                            <field name="fecha de entrada"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>
        <!--  vista Kanban  -->
        <record id="entradas-kanban-view" model="ir.ui.view">
            <field name="name">resreva ADA entradas kanba</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="precio"/>
                    <field name="fecha entrada"/>
                </kanban>
            </field>
        </record>
        <!--   actions opening views on models -->

        <record model="ir.actions.act_window" id="grupo3c.action_window3">
            <field name="name">RESERVA ADA Entrada</field>
            <field name="res_model">grupo3c.entrada</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Entradamanagment"
                  id="grupo3c.menu_3_list"
                  parent="grupo3c.menu_1"
                  action="grupo3c.action_window3"/>
    </data>
</odoo>