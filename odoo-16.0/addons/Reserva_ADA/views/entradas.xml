<odoo>
    <data>
        <!-- Definición de vistas para grupo3c.entradas -->
        <record id="grupo3c_entradas_tree_view" model="ir.ui.view">
            <field name="name">grupo3c.entradas.tree.view</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="precio"/>
                    <field name="fecha_entrada"/>
                    <field name="tipo_entrada"/>
                </tree>
            </field>
        </record>


        <record id="grupo3c_entradas_form_view" model="ir.ui.view">
            <field name="name">grupo3c.entradas.form.view</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <form string="Entradas Form">
                    <group>
                        <group col="2">
                            <field name="precio"/>
                            <field name="fecha_entrada"/>
                            <field name="tipo_entrada"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>


        <record id="grupo3c_entradas_search_view" model="ir.ui.view">
            <field name="name">grupo3c.entradas.search.view</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <search>
                    <field name="precio" align="left"/>
                    <field name="fecha_entrada"/>
                    <field name="tipo_entrada"/>
                </search>
            </field>
        </record>


        <record id="grupo3c_entradas_kanban_view" model="ir.ui.view">
            <field name="name">grupo3c.entradas.kanban.view</field>
            <field name="model">grupo3c.entradas</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <div class="o_kanban_record_subtitle">
                                        <div class="o_kanban_attribute">
                                            Precio:
                                            <field name="precio" widget="monetary"
                                                   options="{'currency_field': 'currency_id'}"/>
                                        </div>
                                        <div class="o_kanban_attribute">
                                            Fecha de Entrada:
                                            <field name="fecha_entrada"/>
                                        </div>
                                        <div class="o_kanban_attribute">
                                            Tipo de Entrada:
                                            <field name="tipo_entrada"/>
                                        </div>
                                        <!-- Puedes agregar más atributos aquí -->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <!-- Acción de ventana -->
        <record id="Reserva_ADA.action_window3" model="ir.actions.act_window">
            <field name="name">RESERVA ADA ENTRADAS</field>
            <field name="res_model">grupo3c.entradas</field>
            <field name="view_mode">tree,form,search,kanban</field>
        </record>


        <!-- Menús -->
        <menuitem name="RESERVA_G3" id="Reserva_ADA.menu_root"/>
        <menuitem name="Entradas Management"
                  id="Reserva_ADA.menu_3_list"
                  parent="Reserva_ADA.menu_root"
                  action="Reserva_ADA.action_window3"/>
    </data>
</odoo>
