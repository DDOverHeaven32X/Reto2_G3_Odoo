<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="Reserva_ADA_entradas_reporte" model="ir.actions.report">
            <field name="name">Informe de entradas</field>
            <field name="model">grupo3c.entradas</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">Reserva_ADA.reserva_ada_entradas_template</field>
            <field name="report_file">Reserva_ADA.report_entradas</field>
            <field name="binding_model_id" ref="model_Reserva_ADA_entradas"/>
        </record>
        <template id="reserva_ada_entrada_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <table>
                                <tr>
                                    <td style="width:25%" align="center" valign="center">
                                        <img t-if="o.image" t-att-src="image_data_uri(o.image)" />
                                        <br/><b>Precio de entrada: </b> <span t-field="o.precio"></span>
                                        <br/><b>Tipo de entrada: </b> <span t-field="o.tipo_entrada"></span>
                                        <br/><b>Fecha de entrada: </b> <span t-field="o.fecha_entrada"></span>
                                    </td>
                                    <td style="border-left: 1px solid black;"></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>